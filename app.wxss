/**app.wxss**/

page {
  height: 100%;
  width: 100%;
  position: relative;
}

.nav {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  z-index: 999;
}

.nav .logo-view {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.nav .logo-view .logo {
  height: 135rpx;
  width: 375rpx;
}

.nav .avatar {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  margin: 20rpx;
}

.bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 140rpx 30rpx;
  box-sizing: border-box;
} 

.pull-left {
  display: inline-block;
}

.pull-right{
  float: right;
}

.btn-prm {
  color: white;
  background-color: #337ab7;
}

.btn-warn {
  color: white;
  background-color: #f0ad4e;
}
