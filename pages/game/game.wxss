.ope-panel {
  background-color: rgba(250,235,215,0.5);
  border-radius: 15rpx;
  z-index: 99;
  width: 100%;
  padding: 20rpx 0;
}

.ope-panel .notice {
  margin: 0 20rpx;
}

.ope-panel .notice .status {
  font-size: 30rpx;
  color: #333;
}

.ope-panel .ope-player {
  margin: 20rpx;
}

.ope-panel .tips {
  width: 100%;
  height: 90rpx;
}

.players-panel {
  width: 100%;
  margin-top: 50rpx;
  z-index: 99;
}

.players-panel .player {
  margin: 15rpx 10rpx;
}

.players-panel button {
  padding: 0;
  border-radius: 5%;
  background: transparent;
  position: relative;
}

.players-panel button:after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 0;
  width: 0; 
  height: 0; 
  border-bottom: 150rpx solid transparent;
  border-left: 150rpx solid green;
}

.players-panel image {
  height: 150rpx;
  width: 150rpx;
  border-radius: 20%;
  margin: 0 0 -33rpx 0;
}

.players-panel text {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
  color: white;
  z-index: 99;
}

.players-panel .pos {
  position: absolute;
  top: 0;
  left: 15rpx;
  line-height: 50rpx;
}
